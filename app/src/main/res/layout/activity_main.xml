<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fl_wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:theme="@style/bottom_nav_font"
        style="@style/bottom_nav_font"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="1.0">

    </FrameLayout>

    <include
        android:id="@+id/include"
        layout="@layout/home_tool_bar" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:elevation="35dp"
        android:fitsSystemWindows="true"
        app:itemBackground="@color/white"
        android:theme="@style/Theme.InesLab1"
        app:itemIconTint="@drawable/nav_item_selected"
        app:itemTextAppearanceInactive="@style/bottom_nav_font"
        app:itemTextColor="@drawable/nav_item_selected"
        app:labelVisibilityMode="labeled"
        app:itemActiveIndicatorStyle="@style/bottom_nav_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>