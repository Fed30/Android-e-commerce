<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_brown">

<TextView
    android:id="@+id/welcomeToolLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="WELCOME"
    android:textSize="26dp"
    android:textColor="@color/colorPrimaryDark"
    android:textStyle="bold"
    android:fontFamily="sans-serif-smallcaps"
    android:paddingTop="10dp"
    android:paddingLeft="10dp">
</TextView>
    <TextView
        android:id="@+id/welcomeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loading"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toEndOf="@+id/welcomeToolLabel"
        android:paddingLeft="10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingTop="10dp">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/orders_card"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/welcomeName"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/order_icon"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@+id/welcomeName"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:src="@drawable/orders_pink"/>
    <TextView
        android:id="@+id/order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Orders"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:layout_gravity="bottom|center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
    </TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/referal_card"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/welcomeName"
        app:cardElevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/orders_card"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/referal"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:src="@drawable/referal_pink" />

        <TextView
        android:id="@+id/referal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referal"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:layout_gravity="bottom|center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
    </TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/message_card"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/welcomeName"
        app:cardElevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/referal_card"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:src="@drawable/outline_email_24" />
        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:layout_gravity="bottom|center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
        </TextView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>